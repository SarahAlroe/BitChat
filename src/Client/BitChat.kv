#:kivy 1.8
#:import ListItemButton kivy.uix.listview.ListItemButton
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import ScreenFriendsList ScreenFriendsList

#:set titleFont "../../res/fonts/VT323.ttf"
#:set textFont "../../res/fonts/Consolas.ttf"
#:set borderImage "../../res/Green border.png"
#:set borderImageDown "../../res/Green border - down.png"
#:set border [6,6,6,6]

<ScreenLogin>:
	te_username: username
	BoxLayout:
		orientation: "horizontal"
		Label:
			size_hint_x: 0.5
			
		BoxLayout:
			orientation: "vertical"
			size_hint_x: 1
			spacing: 10
			#padding: 0,50,0,50
			
			Label:
				size_hint_y: 1
				text: 'BitChat'
				#halign: 'middle'
				valign: 'top'
				foreground_color: 0,255,0,1
				font_name: titleFont
				font_size: "150sp"
				color: 0,1,0,1
			TextInput:
				id: username
				size_hint: 1, 0.2
				multiline: False
				font_name: titleFont
				hint_text: "Username"
				background_color: 0,25,0,0.1
				foreground_color: 0,255,0,1
				border: border
				background_normal: borderImage
				background_active: borderImage
				cursor_color: 0,1,0,1
				
			TextInput:
				id: password
				size_hint: 1, 0.2
				multiline: False
				password: True
				readonly: True
				font_name: titleFont
				hint_text: "Password"
				background_color: 0,25,0,0.1
				foreground_color: 0,255,0,1
				border: border
				background_normal: borderImage
				background_active: borderImage
				cursor_color: 0,1,0,1
			
			Button:
				font_name: titleFont
				border: border
				background_normal: borderImage
				background_down: borderImageDown
				text: ">"
				size_hint: 1, 0.25
				on_press: root.btn_login_pressed(username.text,password.text)
			Label:
				id: loginText
				size_hint_y: 0.75
				foreground_color: 0,255,0,1
				text: ""
		Label:
			size_hint_x: 0.5

<ScreenConnect>:
	BoxLayout:
		orientation: "horizontal"
		Label:
			size_hint_x: 0.5

		BoxLayout:
			orientation: "vertical"
			size_hint_x: 1
			spacing: 10
			#padding: 0,50,0,50

			Label:
				size_hint_y: 1
				text: 'Connect'
				#halign: 'middle'
				valign: 'top'
				foreground_color: 0,255,0,1
				font_name: titleFont
				font_size: "150sp"
				color: 0,1,0,1
			Label:
				size_hint: 1, 0.2
				text: "Input the username of the one you wish to talk to and click >"
			TextInput:
				id: user
				size_hint: 1, 0.2
				multiline: False
				font_name: titleFont
				hint_text: "Username"
				background_color: 0,25,0,0.1
				foreground_color: 0,255,0,1
				border: border
				background_normal: borderImage
				background_active: borderImage
				cursor_color: 0,1,0,1

			Button:
				font_name: titleFont
				border: border
				background_normal: borderImage
				background_down: borderImageDown
				text: ">"
				size_hint: 1, 0.25
				on_press: root.btn_connect_pressed(user.text)
			Label:
				size_hint_y: 0.75
				foreground_color: 0,255,0,1
				text: ""
		Label:
			size_hint_x: 0.5

<ScreenFriendsList>:
	BoxLayout:
		id: bx_layout 
		orientation: "horizontal"
		BoxLayout:
			orientation: "vertical"
			spacing: 5
			Button:
				text: "Chat!"
				border: border
				background_normal: borderImage
				background_down: borderImageDown
				on_press: root.chat()
			Button:
				text: "update"
				border: border
				background_normal: borderImage
				background_down: borderImageDown
				on_press: root.update()
		
		ListView:
			id: list
			adapter: 
				ListAdapter(
				data=["1","9","3"],
				cls=ListItemButton, 
				args_converter=root.userConverter)
			
<ScreenChat>:
	BoxLayout:
		orientation: "vertical"
		spacing: 5
		
		
		TextInput:
			id: chatBox
			font_name: textFont
			text: ""
			readonly: True
			#valign: "top"
			size_hint: 1, 1
			foreground_color: 0,255,0,1
			border: border
			background_normal: borderImage
			background_active: borderImage
			cursor_color: 0,1,0,1
			
		BoxLayout:
			orientation: "horizontal"
			spacing: 2
			size_hint: 1, 0.2
			
			TextInput:
				id: sendBox
				font_name: textFont
				text: ""
				foreground_color: 0,255,0,1
				border: border
				background_normal: borderImage
				background_active: borderImage
				multiline: False
				on_text_validate: root.sendMessage(sendBox.text)
				cursor_color: 0,1,0,1
				
			Button:
				font_name: titleFont
				text: ">"
				size_hint_x: 0.15
				border: border
				background_normal: borderImage
				background_down: borderImageDown
				on_press: root.sendMessage(sendBox.text)