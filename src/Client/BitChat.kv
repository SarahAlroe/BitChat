#:kivy 1.8

<LoginScreen>:
	te_username: username
	BoxLayout:
		orientation: "horizontal"
		Label:
			size_hint_x: 0.5
			
		BoxLayout:
			orientation: "vertical"
			size_hint_x: 1
			spacing: 10
			#padding: 0,50,0,50
			
			Label:
				size_hint_y: 1
				text: 'BitChat v. 2.0'
				#halign: 'middle'
				valign: 'top'
				foreground_color: 0,255,0,1
				font_name: "../../res/fonts/Consolas.ttf"
			TextInput:
				id: username
				size_hint: 1, 0.2
				multiline: False
				font_name: "../../res/fonts/Consolas.ttf"
				hint_text: "Username"
				background_color: 0,25,0,0.1
				foreground_color: 0,255,0,1
				
			TextInput:
				id: password
				size_hint: 1, 0.2
				multiline: False
				password: True
				readonly: True
				font_name: "../../res/fonts/Consolas.ttf"
				hint_text: "Password"
				background_color: 0,25,0,0.1
				foreground_color: 0,255,0,1
			
			Button:
				font_name: "../../res/fonts/Consolas.ttf"
				text: ">"
				size_hint: 1, 0.25
				on_press: root.btn_login_pressed(username.text,password.text)
			Label:
				size_hint_y: 1
		Label:
			size_hint_x: 0.5
			
			
